<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Go+ by Tutorials: {{.Title}}</title>
    <link rel=stylesheet href="site.css">
  </head>
  <script>
      onkeydown = (e) => {
          {{if .Prev}}
          if (e.key == "ArrowLeft") {
              window.location.href = '{{.Prev.Path}}';
          }
          {{end}}
          {{if .Next}}
          if (e.key == "ArrowRight") {
              window.location.href = '{{.Next.Path}}';
          }
          {{end}}
      }
  </script>
  <body>
    <div class="example" id="{{.Path}}">
      <h2><a href="./">Go+ by Tutorials</a>: {{.Title}}</h2>
      {{range .Files}}<table>
        {{range .Segs}}<tr>
          {{if .DocsRendered}}<td class="docs">
            {{.DocsRendered}}
          </td>{{end}}
          {{if .CodeRendered}}<td class="code{{if .CodeLeading}} leading{{end}}">
            {{if .URLHash}}<a target="_blank" href="http://play.goplus.org/p/{{.URLHash}}"><img title="Run code" src="play.png" class="run" /></a><img title="Copy code" src="clipboard.png" class="copy" />{{end}}
            {{.CodeRendered}}
          </td>{{end}}
        </tr>{{end}}
      </table>{{end}}
      {{if .Next}}<p class="next">
        Next example: <a href="{{.Next.Path}}">{{.Next.Title}}</a>.
      </p>{{end}}
{{ template "footer" }}
    </div>
    <script>
      var codeLines = [];
      {{range .Files}}{{range .Segs}}codeLines.push('{{js .CodeForJs}}');{{end}}{{end}}
    </script>
    <script src="site.js" async></script>
  </body>
</html>
